# Reddit API Configuration
# Get credentials from https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=windows:reddit-newsletter-bot:v2.0 (by /u/your_username)

# Target Subreddits (comma-separated)
TARGET_SUBREDDITS=AskReddit,todayilearned,worldnews,technology,science,programming,MachineLearning
POSTS_LIMIT=25
NEWSLETTER_POSTS_LIMIT=10
INCLUDE_NSFW=false

# SMTP Email Server Configuration  
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com

# Email Recipients (comma-separated)
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# Schedule Configuration
SCHEDULE_TIME=11:00
RUN_IMMEDIATELY=false

# Database Configuration
DATABASE_PATH=data/database/reddit_newsletter.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=data/logs/reddit_newsletter.log

# OpenAI GPT Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
ENABLE_GPT_SUMMARIES=true

# Newsletter Editor Configuration
EDITOR_NAME=Newsletter Editor
EDITOR_EMAIL=editor@example.com
