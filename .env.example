# Reddit API 配置
# 在 https://www.reddit.com/prefs/apps 创建应用获取
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=windows:reddit-newsletter-bot:v1.0 (by /u/your_username)

# 目标Subreddit配置 (用逗号分隔)
TARGET_SUBREDDITS=AskReddit,todayilearned,worldnews,technology,science,funny,pics,gaming
POSTS_LIMIT=25
NEWSLETTER_POSTS_LIMIT=10
INCLUDE_NSFW=false

# SMTP邮件服务器配置
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=true
SMTP_USE_SSL=false
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com

# 收件人配置 (用逗号分隔)
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# 定时任务配置
SCHEDULE_TIME=11:00
RUN_IMMEDIATELY=false

# 数据库配置
DATABASE_PATH=data/database/reddit_newsletter.db

# 日志配置
LOG_LEVEL=INFO
LOG_FILE_PATH=data/logs/reddit_newsletter.log
